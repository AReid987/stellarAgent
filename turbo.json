{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:trigger": {
      "cache": false,
      "persistent": true
    },
    "commit": {
      "cache": false,
      "persistent": false
    },
    "test": {
      "cache": true
    },
    "test:cov": {
      "cache": true
    },
    "install:deps": {
      "cache": true,
      "outputs": [
        "requirements.txt",
        ".venv/**"
      ]
    }
    // We want to be able to trigger the scripts for the AI Gateway
    // using turbo tasks AI!
  },
  "globalDependencies": [
    "$PYTHON_VERSION",
    ".python-version"
  ],
  "globalEnv": [
    "PYTHONPATH",
    "FASTAPI_ENV"
  ]
}
