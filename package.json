{
  "name": "stellar-agent",
  "private": true,
  "type": "module",
  "scripts": {
    "cz": "czg emoji",
    "commit": "czg emoji",
    "commit:add": "git add -A && czg emoji",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo test",
    "test:cov": "turbo test:cov",
    "uv:add": "uv add",
    "uv:compile": "uv pip compile pyproject.toml -o requirements.txt",
    "uv:install": "uv pip install -r requirements.txt",
    "uv:install:upgrade": "uv pip install -U` -r requirements.txt",
    "uv:compile:install": "pnpm run uv:compile && pnpm run uv:install"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "czConfig": "./config/cz.config.cjs"
    }
  },
  "devDependencies": {
    "@codesandbox/sdk": "^0.3.0",
    "gptlint": "^1.6.0",
    "jest-junit": "^16.0.0",
    "lefthook": "^1.11.5",
    "prettier": "^3.4.2",
    "testcontainers": "^10.17.1",
    "turbo": "^2.3.3",
    "typescript": "5.7.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "code2flow": "0.0.1-alpha.0",
    "cz-git": "1.7.1",
    "czg": "1.10.0",
    "dotenv-vault": "^1.26.2",
    "lint-staged": "^15.3.0",
    "log-symbols": "^7.0.0",
    "next": "^15.1.5",
    "zx": "^8.3.0"
  },
  "pnpm": {
    "overrides": {
      "nanoid@<3.3.8": ">=3.3.8"
    }
  }
}
