layout_py() {
	local venv_path=".venv" # Adjust if your .venv is elsewhere

	if [[ -d "$venv_path" ]]; then
		if [[ "$1" == "prompt" ]]; then
			echo "(venv)" # Customize your prompt indicator
		elif [[ "$1" == "activate" ]]; then
			source "$venv_path/bin/activate"
		elif [[ "$1" == "deactivate" ]]; then
			deactivate
		fi
	fi
}

use_python() {
	local venv_path=".venv" # Adjust if your .venv is elsewhere

	if [[ -d "$venv_path" ]]; then
		layout py
	fi
}

use python
